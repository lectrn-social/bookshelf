{
  "name": "lectrn",
  "version": "1.0.0",
  "description": "A social network for humans.",
  "main": "server.js",
  "scripts": {
    "test": "npm run seed && jest",
    "lint": "standard",
    "seed": "node util/seedwarn.js && knex seed:run",
    "migrate": "knex migrate:latest",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lectrn/lectrn.git"
  },
  "keywords": [
    "activitypub",
    "social",
    "network"
  ],
  "author": "mogery",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/lectrn/lectrn/issues"
  },
  "homepage": "https://github.com/lectrn/lectrn#readme",
  "private": true,
  "devDependencies": {
    "jest": "^26.6.3",
    "sqlite3": "^5.0.2",
    "standard": "^16.0.3",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "argon2": "^0.27.2",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "knex": "^0.21.19",
    "objection": "^2.2.15",
    "pg": "^8.6.0",
    "secure-random-string": "^1.1.3",
    "striptags": "^3.1.1"
  },
  "standard": {
    "env": [ "jest" ]
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js",
      "**/*.js",
      "!{migrations,seeds,coverage,util,node_modules}/**/*",
      "!index.js"
    ]
  }
}
